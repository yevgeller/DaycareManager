@page "/children/edit/{id:int}"
@using DaycareManager.Models
@using DaycareManager.Data
@using Microsoft.EntityFrameworkCore
@inject DaycareDbContext DbContext
@inject NavigationManager NavigationManager

<PageTitle>Edit Child</PageTitle>

@if (Child != null)
{
    <h3>Edit Child: @Child.LastName, @Child.FirstName</h3>
}
else
{
    <h3>Edit Child</h3>
}
<hr />
@if (Child is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="Child" OnValidSubmit="UpdateChild" FormName="editChild" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />
                <InputNumber @bind-Value="Child.Id" hidden />
                
                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <InputText id="firstName" class="form-control" @bind-Value="Child.FirstName" />
                    <ValidationMessage For="() => Child.FirstName" class="text-danger" />
                </div>
                
                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <InputText id="lastName" class="form-control" @bind-Value="Child.LastName" />
                    <ValidationMessage For="() => Child.LastName" class="text-danger" />
                </div>
                
                <div class="mb-3">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <InputDate id="dob" class="form-control" @bind-Value="Child.DateOfBirth" />
                    <ValidationMessage For="() => Child.DateOfBirth" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="gender" class="form-label">Gender</label>
                    <InputSelect id="gender" class="form-control" @bind-Value="Child.Gender">
                        <option value="">-- Select Gender --</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </InputSelect>
                    <ValidationMessage For="() => Child.Gender" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Age: @Child.AgeDescription</label>
                </div>

                <div class="mb-3">
                    <label for="classroom" class="form-label">Classroom</label>
                    <InputSelect id="classroom" class="form-control" @bind-Value="Child.ClassroomId">
                        <option value="">-- Select Classroom --</option>
                        @foreach (var classroom in Classrooms)
                        {
                            <option value="@classroom.Id">@classroom.ClassroomNumber (@classroom.MinAgeMonths - @classroom.MaxAgeMonths months)</option>
                        }
                    </InputSelect>
                </div>

                 @if (ShowAgeWarning)
                 {
                     <div class="alert alert-warning" role="alert">
                         <strong>Warning:</strong> The child's age (@AgeInMonths months) is outside the recommended range for this classroom (@SelectedClassroom?.MinAgeMonths - @SelectedClassroom?.MaxAgeMonths months).
                     </div>
                 }
                
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="/children" class="btn btn-secondary">Back to List</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    public Child? Child { get; set; }

    public List<Classroom> Classrooms { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        Classrooms = await DbContext.Classrooms.OrderBy(c => c.MinAgeMonths).ToListAsync();

        if (Child is null)
        {
            Child = await DbContext.Children.FirstOrDefaultAsync(m => m.Id == Id);

            if (Child is null)
            {
                NavigationManager.NavigateTo("notfound");
            }
        }
    }

    private Classroom? SelectedClassroom => Classrooms.FirstOrDefault(c => c.Id == Child?.ClassroomId);

    private int AgeInMonths
    {
        get 
        {
            if (Child is null) return 0;
            return (int)((DateTime.Today - Child.DateOfBirth).TotalDays / 30.436875);
        }
    }

    private bool ShowAgeWarning
    {
        get
        {
            if (Child?.ClassroomId is null || SelectedClassroom is null) return false;
            return AgeInMonths < SelectedClassroom.MinAgeMonths || AgeInMonths > SelectedClassroom.MaxAgeMonths;
        }
    }

    private async Task UpdateChild()
    {
        DbContext.Attach(Child!).State = EntityState.Modified;

        try
        {
            await DbContext.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ChildExists(Child!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/children");
    }

    private bool ChildExists(int id)
    {
        return DbContext.Children.Any(e => e.Id == id);
    }
}
