@page "/parents/delete/{id:int}"
@using DaycareManager.Models
@using DaycareManager.Data
@using Microsoft.EntityFrameworkCore
@inject DaycareDbContext DbContext
@inject NavigationManager NavigationManager

<PageTitle>Delete Parent</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Parent</h4>
    <hr />
    @if (parent is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">First Name</dt>
            <dd class="col-sm-10">@parent.FirstName</dd>
            
            <dt class="col-sm-2">Last Name</dt>
            <dd class="col-sm-10">@parent.LastName</dd>
            
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@parent.PhoneNumber</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@parent.Email</dd>
        </dl>
        <EditForm Model="parent" OnValidSubmit="DeleteParent" FormName="deleteParent" Enhance>
             <button type="submit" class="btn btn-danger">Delete</button> |
             <a href="/parents">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Parent? parent;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        parent = await DbContext.Parents.FirstOrDefaultAsync(m => m.Id == Id);

        if (parent is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteParent()
    {
        DbContext.Parents.Remove(parent!);
        await DbContext.SaveChangesAsync();
        NavigationManager.NavigateTo("/parents");
    }
}
